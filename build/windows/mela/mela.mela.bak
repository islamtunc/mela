// بسم الله الرحمن الرحيم
// مثال لبرنامج Mela

module الصفحة_الرئيسية

// Struct Example
struct مستخدم
    الاسم: String
    العمر: Int

// Var Example
var المستخدمين: Array<مستخدم> = []

// Function Example
fn إضافة_مستخدم(الاسم: String, العمر: Int)
    var جديد = مستخدم(الاسم, العمر)
    المستخدمين.push(جديد)

fn عرض_المستخدمين()
    print("قائمة المستخدمين:")
    for u in المستخدمين
        print("الاسم:", u.الاسم, "العمر:", u.العمر)

// Main / Entry
fn الصفحة_الرئيسية_الرئيسية()
    print("تشغيل البرنامج الرئيسي")
    إضافة_مستخدم("أحمد", 25)
    إضافة_مستخدم("فاطمة", 30)
    عرض_المستخدمين()

الحمد لله رب العالمين
