استورد "array.mela"

# تعريف المتغيرات
لن س = 10
لن ص = 20
لن رسالة = "مرحبا ميلا!"

# تعريف دالة
دالة جمع(أ، ب) {
    أرجع أ + ب
}

# استخدام وحدة الرياضيات
لن مجموع = math.add(س، ص)

# استخدام وحدة المصفوفة
لن مصفوفة = array.create(3)
مصفوفة[0] = س
مصفوفة[1] = ص
مصفوفة[2] = مجموع

# طباعة النتائج
اطبع(رسالة)
اطبع("المجموع:", مجموع)
اطبع("المصفوفة:", مصفوفة)

# استخدام معرفات عربية (اختياري)
دعاء = "اللهم صل على محمد"
اطبع(دعاء)

# HTML arayüz çıktısı örneği
