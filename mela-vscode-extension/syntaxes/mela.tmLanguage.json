{
  "scopeName": "source.mela",
  "name": "Mela",
  "patterns": [
    { "name": "comment.line.number-sign.mela", "match": "#.*$" },
    { "name": "keyword.control.mela", "match": "\b(if|else|for|while|return|class|def|import|from|as|break|continue|pass|in|and|or|not|is|None|True|False)\b" },
    { "name": "string.quoted.double.mela", "begin": "\"", "end": "\"" },
    { "name": "string.quoted.single.mela", "begin": "'", "end": "'" },
    { "name": "constant.numeric.mela", "match": "\\b[0-9]+(\\.[0-9]+)?\\b" },
    { "name": "variable.mela", "match": "\b[a-zA-Z_][a-zA-Z0-9_]*\b" }
  ],
  "repository": {},
  "fileTypes": ["mela"],
  "uuid": "mela-tmLanguage-001"
}
